<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:paddingHorizontal="20dp"
    android:paddingTop="36dp"
    android:paddingBottom="20dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gStart"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.94"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gRow1End"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gRow2End"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gRow3End"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slive Guard"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#111827"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvLastSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마지막 동기화: --"
        android:visibility="gone"
        android:textSize="13sp"
        android:textColor="#6B7280"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        android:layout_marginTop="2dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnConnection"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:clickable="false"
        android:focusable="true"
        app:cardCornerRadius="90dp"
        app:strokeColor="@color/green"
        app:strokeWidth="2dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/tvLastSync"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="14dp">

            <ImageView
                android:id="@+id/imgWatch"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_watch"
                app:tint="@color/green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/tvConnectState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연결됨"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                app:layout_constraintStart_toEndOf="@id/imgWatch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvDrowsyStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/btnConnection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCurrent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="0dp"
        app:strokeColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        app:layout_constraintTop_toBottomOf="@id/btnConnection"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvCurrentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 심박수 | 현재 상태"
                android:textSize="16sp"
                android:textColor="#6B7280"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvCurrentBpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- bpm"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#111827"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#D1D5DB"
                    android:layout_marginHorizontal="16dp"/>

                <TextView
                    android:id="@+id/tvCurrentState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정상"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#111827"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/rowMiniCards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cardCurrent"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        android:layout_marginTop="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:strokeColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="0dp"
            android:layout_marginEnd="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvAvgLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평균 심박수"
                    android:textSize="16sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tvAvgHr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- bpm"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:strokeColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="0dp"
            android:layout_marginStart="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvMaxLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최고 심박수"
                    android:textSize="16sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tvRestHr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- bpm"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGraph"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="0dp"
        app:strokeColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/rowMiniCards"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="심박수 그래프"
                android:textColor="#111827"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#E5E7EB"
                android:backgroundTint="@color/white"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>