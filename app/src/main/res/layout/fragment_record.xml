<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recordRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="심박수 기록"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#111111"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 날짜 네비 -->
    <LinearLayout
        android:id="@+id/layoutDateNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnPrevDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="〈"
            android:textSize="18sp"
            android:textColor="#111111"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024년 7월 1일"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111111"
            android:paddingHorizontal="8dp"/>

        <TextView
            android:id="@+id/btnNextDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="〉"
            android:textSize="18sp"
            android:textColor="#111111"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- 카드 컨테이너 -->
    <LinearLayout
        android:id="@+id/layoutCards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutDateNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 2x2 통계 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평균 심박수"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tvAvgHr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="72 bpm"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최대 심박수"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tvMaxHr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="95 bpm"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E6E6E6"
                android:layout_marginVertical="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최소 심박수"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tvMinHr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60 bpm"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 심박수"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#222222"/>

                    <TextView
                        android:id="@+id/tvCurrentHr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75 bpm"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 섹션 타이틀 -->
        <TextView
            android:id="@+id/tvSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1분 간격 기록"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#111111"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"/>

        <!-- 테이블 헤더 -->
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="시간"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="심박수"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#333333"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="졸음 단계"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#333333"
                android:gravity="end"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DADADA"
            android:layout_marginTop="8dp"/>

        <!-- 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:clipToPadding="false"
            android:paddingBottom="90dp"
            app:layout_constraintHeight_default="wrap"
            tools:listitem="@layout/item_record_row"/>
    </LinearLayout>

    <!-- RecyclerView height 제약(ConstraintLayout 상에서) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
