<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:paddingHorizontal="24dp">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/tvSettingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_placeholder"
        android:background="#D8DEE9"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toBottomOf="@id/tvSettingTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이름 -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="홍길동"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Device 섹션 타이틀 -->
    <TextView
        android:id="@+id/tvDeviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Device"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Device 카드 -->
    <LinearLayout
        android:id="@+id/layoutDevice"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@drawable/bg_setting_item"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgDevice"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_watch"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tvDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="디바이스 이름"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#222222" />
    </LinearLayout>

    <!-- Data 섹션 타이틀 -->
    <TextView
        android:id="@+id/tvDataTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="데이터"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/layoutDevice"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layoutExportData"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:visibility="gone"
        android:background="@drawable/bg_setting_item"
        app:layout_constraintTop_toBottomOf="@id/tvDataTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgExport"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_export"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tvExportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="데이터 내보내기"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- 전체 데이터 삭제 카드 -->
    <LinearLayout
        android:id="@+id/layoutDeleteAll"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@drawable/bg_setting_item"
        app:layout_constraintTop_toBottomOf="@id/layoutExportData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tvDeleteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="전체 데이터 삭제"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/red" />
    </LinearLayout>

    <!-- 로그아웃 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="로그아웃"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:background="@drawable/bg_setting_item"
        app:layout_constraintTop_toBottomOf="@id/layoutDeleteAll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 버전 텍스트 -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="버전 1.1.1"
        android:textSize="12sp"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@id/btnLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
